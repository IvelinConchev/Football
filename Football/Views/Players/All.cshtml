@model AllPlayerQueryModel

@{
    ViewData["Title"] = "All Players";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Team"></label>
                <select asp-for="Team" class="form-control">
                    <option value="">All</option>

                    @foreach (var team in Model.Teams)
                    {
                        <option value="@team">@team</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Ivan Petkov Mihov...">
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>First Name Middle Name LastName</option>
                    <option value="1" selected>Team</option>
                    <option value="2" selected>Position</option>
                    <option value="3" selected>Description</option>
                </select>
            </div>
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalPlayers / AllPlayerQueryModel.PlayerPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Players"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-team="@Model.Team"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary float-right @(Model.CurrentPage == maxPage ? "disabled" : string.Empty)"
           asp-controller="Players"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-team="@Model.Team"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
    <br />
    <br />

    <div class="row">

        @foreach (var player in Model.Players)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="@player.Image" alt=" @player.FirstName @player.MiddleName @player.LastName - @player.Age @player.Nationality @player.Team (@player.Position)" width="200" height="300">
                    <div class="card-body text-center">
                        <h5 class="card-title text-center">(№@player.ShirtNumber) @player.FirstName  @player.MiddleName @player.LastName отбор - @player.Team @player.Position (@player.Age г.)</h5>
                        <br />
                        <a asp-controller="Players" asp-action="Details" asp-route-id=@player.Id class="btn btn-primary">Виж повече</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


